{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests (can be debugged)",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/test/test.js"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Tap Tests (cannot be debugged)",
            "program": "${workspaceFolder}/node_modules/.bin/tap",
            "args": [
                "${workspaceFolder}/test/test.js"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/test/index.js"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug with CodeLLDB",
            "program": "/Users/jim/Repositories/OpenSource/node/out/Debug/node",
            "args": [ "${workspaceFolder}/test/index.js" ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug with Microsoft C/C++",
            "type": "cppdbg",
            "request": "launch",
            "program": "/Users/jim/Repositories/OpenSource/node/out/Debug/node",
            "args": [ "${workspaceFolder}/test/index.js" ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        }
    ]
}